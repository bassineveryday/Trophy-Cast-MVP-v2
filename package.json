  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:integration": "jest __tests__/integration-*.test.ts",
    "test:unit": "jest --testPathIgnorePatterns=__tests__/integration-",
    "test:all": "npm run type-check && npm run lint && npm run test:ci",
    "test:db": "node -e \"const test = require('./lib/databaseTest.ts'); test.runConnectionTest();\"",
    "health-check": "jest __tests__/tournament-health-check.test.ts --verbose",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"statements\":40,\"branches\":35,\"functions\":40,\"lines\":40}}'",
    "build": "expo export --platform web"
  },
